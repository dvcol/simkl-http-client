{
  "name": "@dvcol/simkl-http-client",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@9.7.0",
  "description": "Simple fetch based http client for Simkl API with full typescript support (request and response)",
  "homepage": "https://github.com/dvcol/simkl-http-client",
  "bugs": "https://github.com/dvcol/simkl-http-client/issues",
  "keywords": [
    "typescript",
    "library",
    "myanimelist",
    "mal",
    "node",
    "fetch",
    "simkl-http-client"
  ],
  "license": "MIT",
  "author": "dvcol",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/simkl-http-client.git"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">= 8"
  },
  "main": "./dist/clients/index.cjs",
  "module": "./dist/clients/index.js",
  "types": "./dist/clients/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/clients/index.cjs",
      "import": "./dist/clients/index.js",
      "types": "./dist/clients/index.d.ts"
    },
    "./config": {
      "require": "./dist/config/index.cjs",
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./models": {
      "require": "./dist/models/index.cjs",
      "import": "./dist/models/index.js",
      "types": "./dist/models/index.d.ts"
    },
    "./api": {
      "require": "./dist/api/mal-api.endpoints.cjs",
      "import": "./dist/api/mal-api.endpoints.js",
      "types": "./dist/api/mal-api.endpoints.d.ts"
    },
    "./api/minimal": {
      "require": "./dist/api/mal-api-minimal.endpoints.cjs",
      "import": "./dist/api/mal-api-minimal.endpoints.js",
      "types": "./dist/api/mal-api-minimal.endpoints.d.ts"
    }
  },
  "files": [
    "*.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "tsup",
    "watch": "npm run build -- --watch lib",
    "lint": "eslint lib",
    "lint:fix": "eslint lib --fix",
    "test:unit": "vitest --run --coverage",
    "test:watch": "vitest",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {},
  "dependencies": {
    "@dvcol/base-http-client": "^1.12.2",
    "@dvcol/common-utils": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@dvcol/eslint-plugin-presets": "^1.3.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vitest": "^0.4.1",
    "eslint-plugin-yml": "^1.14.0",
    "extract-changelog-release": "^1.0.2",
    "husky": "^9.1.4",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,svelte,json,md}": [
      "eslint --fix"
    ]
  }
}
